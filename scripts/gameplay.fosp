				cr.ParamBase[(16)]=cr.ParamBase[(16)]*0.6-1;
				cr.ParamBase[(23)]=cr.ParamBase[(23)]*0.6-1;
				cr.ParamBase[(10)]=cr.ParamBase[(10)]*0.6-1;
				cr.ParamBase[(72)]=cr.ParamBase[(72)]*0.5;
				cr.ParamBase[(7)]=cr.ParamBase[(7)]*0.6-5;
