				cr.ParamBase[(23)]=cr.ParamBase[(23)]*0.9-1;
				cr.ParamBase[(10)]=cr.ParamBase[(10)]*0.9-1;
				cr.ParamBase[(72)]=cr.ParamBase[(72)]*0.9;
				cr.ParamBase[(7)]=cr.ParamBase[(7)]*0.9-5;
			}
			return true;
		}
