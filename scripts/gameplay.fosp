bool respawn_npc(Critter&cr,Map@map)
{
	if(not(@map!=null))
	{
		DeleteNpc(cr);
		return true;
	}
	
	uint16 hx=cr.HexX,
	hy=cr.HexY;
	
	if(not map.IsHexPassed(hx,hy))
	{
		bool founded=false;
		for(int x=-1;x<=1;x++)
		{
			for(int y=-1;y<=1;y++)
			{
				if(x==0&&y==0)
				continue;
				
				if(__MapHexagonal)
				{
					if((hx%2)==1&&((x==-1&&y==1)||(x==1&&y==1)))
					continue;
					if((hx%2)==0&&((x==-1&&y==-1)||(x==1&&y==-1)))
					continue;
				}
				
				if(map.IsHexPassed(hx+x,hy+y))
				{
					hx+=x;
					hy+=y;
					founded=true;
					break;
				}
			}
			if(founded)
			break;
		}
		
		if(not founded)
		{
			
			cr.TimeoutBase[(241)]=__FullSecond+((1)*__TimeMultiplier*60);
			return true;
		}
	}
	
	cr.TransitToMap(map.Id,hx,hy,Random(0,5));
	cr.ToLife();
	
	cr.DropPlanes();
	cr.ClearEnemyStackNpc();
	cr.StatBase[(110)]=0;
	
	if(cr.Stat[(113)]!=0)
	{
		Item@block=::GetItem(cr.Stat[(113)]);
		if((@block!=null))
		DeleteItem(block);
		cr.StatBase[(113)]=0;
	}
	
	cr.DamageBase[(502)]=0;
	cr.DamageBase[(503)]=0;
	cr.DamageBase[(504)]=0;
