		brahmin.AddTimeEvent("cte_brahmin_follow",0,(64),0);
		cr.Say((11),"Вы привязали брамина.");
		
	}else if(brahmin.StatBase[(81)]==cr.Id){
		brahmin.ModeBase[(517)]=0;
		brahmin.SetHomePos(brahmin.HexX,brahmin.HexY,brahmin.Dir);
