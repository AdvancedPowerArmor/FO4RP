	}
	if(cr.IsPlayer()&&onCritter.IsPlayer()&&(!IsNotHuman(cr))&&(!IsNotHuman(onCritter)))
	{
		if(cr.Karma[(489)]==0)
		{
			cr.Say((11),"Вы не умеете обращаться с ошейником");
			return true;
		}
		else if(onCritter.Stat[(72)]<0||onCritter.IsKnockout())
		{
			brass=item.Id;
			papik=onCritter.Id;
			Enslave(cr,onCritter);
