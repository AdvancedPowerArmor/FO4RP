		cr.ParamBase[(145)]=param2;
	}
	else if(uint(cr.ParamBase[(140)])&0xFF!=type)
	{
		cr.ParamBase[(143)]=0;
		cr.ParamBase[(144)]=0;
		cr.ParamBase[(145)]=0;
