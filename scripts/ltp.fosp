	cr.ParamBase[(140)]=int(type);
	
	cr.SetEvent((0),"_Process");
	cr.ParamBase[(141)]=int(mapId);
	cr.ParamBase[(142)]=int(__FullSecond);
	cr.RunClientScript("client_main@_waiting",1,0,0,null,null);
