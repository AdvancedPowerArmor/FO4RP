// для roleplay сервера
#define LOCATION_IS_CITY                       # (locPid)                  ( LocIsCity( ( locPid ) ) )

uint[] CityPids =
{
    LOCATION_Lakecity, LOCATION_Junkyard, LOCATION_Modoc, LOCATION_Sacramento, LOCATION_Ghostfarm,
    LOCATION_Modoc_1, LOCATION_Modoc_2, LOCATION_Modoc_3, LOCATION_Modoc_4, LOCATION_Modoc_5, LOCATION_Modoc_6,
    LOCATION_ModocApp_1, LOCATION_ModocApp_2, LOCATION_ModocApp_3, LOCATION_ModocApp_4, LOCATION_ModocApp_5, LOCATION_ModocApp_6,
    LOCATION_lake,
    LOCATION_junkyard,
    LOCATION_phoenix,
    LOCATION_Satter_0_0, LOCATION_Satter_0_1, LOCATION_Satter_0_2, LOCATION_Satter_0_3,
    LOCATION_Satter_1_0, LOCATION_Satter_center, LOCATION_Satter_1_3,
    LOCATION_Satter_2_0, LOCATION_Satter_2_3,
    LOCATION_Satter_3_0, LOCATION_Satter_3_1, LOCATION_Satter_3_2, LOCATION_Satter_3_3
};

bool LocIsCity( uint locPid )
{
    for( uint i = 0, j = CityPids.length(); i < j; i++ )
    {
        if( CityPids[ i ] == locPid )
            return true;
    }
    return false;
}

uint[] MaskedPids = { LOCATION_Phoenix };
bool LocIsMasked( uint locPid )
{
    for( uint i = 0, j = MaskedPids.length(); i < j; i++ )
    {
        if( MaskedPids[ i ] == locPid )
            return true;
    }
    return false;
}

uint[] HiddenPids = { LOCATION_BanditCave };

bool LocIsHidden( uint locPid )
{
    for( uint i = 0, j = HiddenPids.length(); i < j; i++ )
    {
        if( HiddenPids[ i ] == locPid )
            return true;
    }
    return false;
}

