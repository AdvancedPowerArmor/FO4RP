void _InitFish(Item&item,bool firstTime)
{
	if(firstTime)
	{
		uint16 proto=item.GetProtoId();
		if(proto<(940)||proto>(944))
		return;
		
		uint size=proto-(940),
		length=size*10+Random(1,10),
		quality=size*5+Random(1,10),
		freshness=0;
		
		item.Val7=length;
		item.Val2=quality;
		item.Val3=freshness;
		
		item.Cost=(1+size)*length;
	}
	
}

