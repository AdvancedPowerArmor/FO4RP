		fish(cr);
	}
	
	return true;
}

bool _SkillRod(Item&rod,Critter&cr,int skill)
{
	uint16 pid=rod.GetProtoId();
	if(!IsRod(pid))
	return false;
	
	if(skill!=(213)||pid==(920))
	return false;
	
	if(modifyRod(rod,(920)))
