			cr.Say((11),color_fish+"Ваш улов поймал вас.");
			cr.ToKnockout(((false)?(82):(83)),((false)?(86):(87)),((false)?(88):(89)),30,cr.HexX,cr.HexY);
			cr.ParamBase[(72)]-=Random(5,10);
